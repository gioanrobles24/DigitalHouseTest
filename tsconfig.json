{
  "extends": "@tsconfig/react-native/tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@assets/*": ["./src/assets/*"],
      "@components/*": ["./src/components/*"],
      "@constants/*": ["./src/constants/*"],
      "@images/*": ["./src/assets/img/*"],
      "@models/*": ["./src/models/*"],
      "@navigation/*": ["./src/navigation/*"],
      "@networking/*": ["./src/networking/*"],
      "@screens/*": ["./src/screens/*"],
      "@store/*": ["./src/redux/*"],
      "@utils/*": ["./src/utils/*"]
    }
  },
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js"
  ]
}
